# Basic MCP Server Configuration
# Copy this file to .env and adjust values as needed

# ====================
# Server Configuration
# ====================

# Transport type: 'stdio' or 'http'
TRANSPORT_TYPE=http

# HTTP Server Configuration (when using http transport)
HTTP_PORT=8080
HTTP_HOST=0.0.0.0

# Enable CORS for HTTP transport
ENABLE_CORS=true

# ====================
# MCP Configuration
# ====================

# Server name (shown in MCP handshake)
SERVER_NAME=basic-mcp-server

# Server version
SERVER_VERSION=1.0.0

# Protocol version (use latest stable version)
PROTOCOL_VERSION=2025-06-18

# ====================
# Logging Configuration
# ====================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log to file (in addition to console)
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/mcp-server.log

# ====================
# Security Configuration
# ====================

# Enable authentication (basic auth for HTTP)
AUTH_ENABLED=false
AUTH_USERNAME=admin
AUTH_PASSWORD=secret

# Rate limiting (requests per minute)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX=60

# ====================
# AgentFlare Configuration
# ====================

# Enable AgentFlare observability
AGENTFLARE_ENABLED=false

# AgentFlare API Key
AGENTFLARE_API_KEY=your_agentflare_api_key_here

# AgentFlare endpoint for sending telemetry
AGENTFLARE_ENDPOINT=https://your-workspace.agentflare.com/telemetry